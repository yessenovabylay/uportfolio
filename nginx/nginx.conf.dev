server {
    listen 80;

    server_name uportfolio.local;

    location / {
        proxy_pass http://client:3000;
        # Needed for sockets
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location /api {
        proxy_pass http://server:3001;
        rewrite ^/api/(.*) /$1 break;
    }
}